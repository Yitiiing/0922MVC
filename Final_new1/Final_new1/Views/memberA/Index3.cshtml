@*@model IEnumerable<Final_new1.Models.TableMemberCs1101605>*@
@using PagedList
@using PagedList.Mvc

@model IPagedList<Final_new1.Models.TableMemberCs1101605>
@{
    ViewBag.Title = "Index3";
}

<h2>🏐台中太陽神球員個人資料</h2>
<br />
<p class="navbar-right">第 @ViewBag.page3 頁，共 @ViewBag.c3 筆</p>

<div>
    <table class="table table-striped table-bordered table-hover">
        <caption><div class="glyphicon glyphicon-user"></div>球員資料</caption>
        <thead>
            <tr>
                <th>背號</th>
                <th>姓名</th>
                <th>年齡</th>
                <th>身高(cm)</th>
                <th>球齡</th>
                <th>異動</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => m.mId)</td>
                    <td>@Html.DisplayFor(x => m.mName)</td>
                    <td>@Html.DisplayFor(x => m.age)</td>
                    <td>@Html.DisplayFor(x => m.height)</td>
                    <td>@Html.DisplayFor(x => m.ballage)</td>
                    <td>
                        @Html.ActionLink("明細", "DetailsC", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-info glyphicon glyphicon-paperclip", @style = "background-color:#efdf7b " })
                        @Html.ActionLink("編輯", "EditC", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-edit", @style = "background-color:#e4c925 " })
                        @Html.ActionLink("刪除", "DeleteC", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">目前人數 :@ViewBag.num3 人 </td>

            </tr>
        </tfoot>
    </table>
</div>

@Html.PagedListPager(Model, page => Url.Action("Index3", new { page }))
<p>
    @Html.ActionLink("返回首頁", "IndexTEAM", "team2", null, new { @class = "btn btn-warning glyphicon glyphicon-home", @style = "background:#ebe2ad border-color:black" })
    @Html.ActionLink("新增員工資料", "CreateC", null, new { @class = "btn btn-warning glyphicon glyphicon-pencil", @style = "background:#ebe2ad border-color:black" })
</p>

@section topCSS{
    <style>
        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            background-color: #FFD382;
            font-size: xx-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: #FFB630;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: #FFD382;
            font-size: large;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr, .table > tbody > tr > td {
            text-align: center;
        }
    </style>
}







