@model IEnumerable<Final_new1.Models.TableMemberAs1101605>


@{
    ViewBag.Title = "MyQuery";
}

<h2 class="glyphicon glyphicon-search">查詢結果</h2>
<br />
<p class="navbar-right">共有 @ViewBag.sum1 筆資料</p>

<div>
    <table class="table table-striped table-bordered table-hover">
        <caption><div class="glyphicon glyphicon-user"></div>球員資料</caption>
        <thead>
            <tr>
                <th>背號</th>
                <th>姓名</th>
                <th>年齡</th>
                <th>身高(cm)</th>
                <th>球齡</th>
                <th>異動</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => m.mId)</td>
                    <td>@Html.DisplayFor(x => m.mName)</td>
                    <td>@Html.DisplayFor(x => m.age)</td>
                    <td>@Html.DisplayFor(x => m.height)</td>
                    <td>@Html.DisplayFor(x => m.ballage)</td>
                    <td>
                        @Html.ActionLink("明細", "DetailsA", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-info" })
                        @Html.ActionLink("編輯", "EditA", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-primary" })
                        @Html.ActionLink("刪除", "DeleteA", new { id = m.mId }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                @*<td colspan="7">Powered by YZU</td>*@
            </tr>
        </tfoot>
    </table>
</div>
<p>
    @Html.ActionLink("返回查詢", "Querystart", "memberA")
    @Html.ActionLink("新增球員資料", "CreateA", null, new { @class = "btn btn-warning" })
</p>

@section topCSS{
    <style>
        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            background-color: #FFDA96;
            font-size: xx-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: #FFD382;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: lightgreen;
            font-size: large;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}








